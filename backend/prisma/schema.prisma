// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  username     String     @unique
  passwordHash String
  role         String     @default("USER") // ADMIN | USER
  createdAt    DateTime   @default(now())
  auditLogs    AuditLog[]
}

model Employee {
  id             String         @id @default(uuid())
  fullName       String
  workArea       String         // DEPO | URETIM | OFIS | DIGER
  isInsured      Boolean        @default(false)
  startDate      DateTime
  endDate        DateTime?
  salary         Float
  workingDays    Int            @default(30)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  payrollEntries PayrollEntry[]
  trafficFines   TrafficFine[]
  overtimeEntries OvertimeEntry[]
}

model PayrollEntry {
  id              String   @id @default(uuid())
  employeeId      String
  employee        Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  month           Int
  year            Int
  sortOrder       Int      @default(0)
  daysWorked      Int      @default(0)
  advance         Float    @default(0)
  officialAdvance Float    @default(0)
  overtime50      Float    @default(0)
  overtime100     Float    @default(0)
  officialPayment Float    @default(0)
  cashPayment     Float    @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([employeeId, month, year])
}

model TrafficFine {
  id          String              @id @default(uuid())
  employeeId  String
  employee    Employee            @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  fineDate    DateTime
  amount      Float
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  payments    TrafficFinePayment[]

  @@index([employeeId])
  @@index([fineDate])
}

model TrafficFinePayment {
  id            String      @id @default(uuid())
  trafficFineId String
  trafficFine   TrafficFine @relation(fields: [trafficFineId], references: [id], onDelete: Cascade)
  paymentDate   DateTime
  amount        Float
  createdAt     DateTime    @default(now())

  @@index([trafficFineId])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  action     String   // CREATE | UPDATE | DELETE
  entityType String   // EMPLOYEE | PAYROLL
  entityId   String
  entityName String
  changes    String   // JSON string olarak serialize edilir
  timestamp  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([timestamp])
}

model OvertimeEntry {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  entryDate  DateTime
  month      Int
  year       Int
  type       String   // OVERTIME_50 | OVERTIME_100
  multiplier Float
  hours      Float
  amount     Float
  description String? // max 100
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([employeeId])
  @@index([month, year])
  @@index([entryDate])
}

